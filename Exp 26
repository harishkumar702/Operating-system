#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <unistd.h>
#include <fcntl.h>

int main() {
    int fd;
    char buffer[100];
    ssize_t bytesRead, bytesWritten;

    // Create and write to a file
    fd = open("file.txt", O_CREAT | O_WRONLY, 0644);
    if (fd < 0) {
        perror("Error creating file");
        exit(1);
    }
    bytesWritten = write(fd, "This is a test file for file management operations.", 51);
    if (bytesWritten < 0) {
        perror("Error writing to file");
        exit(1);
    }
    close(fd);

    // Read from the file
    fd = open("file.txt", O_RDONLY);
    if (fd < 0) {
        perror("Error opening file");
        exit(1);
    }
    bytesRead = read(fd, buffer, sizeof(buffer) - 1);
    if (bytesRead < 0) {
        perror("Error reading file");
        exit(1);
    }
    buffer[bytesRead] = '\0';
    printf("File content: %s\n", buffer);
    close(fd);

    // Rename the file
    if (rename("file.txt", "newfile.txt") < 0) {
        perror("Error renaming file");
        exit(1);
    }
    printf("File renamed to 'newfile.txt'.\n");

    // Delete the file
    if (unlink("newfile.txt") < 0) {
        perror("Error deleting file");
        exit(1);
    }
    printf("File 'newfile.txt' deleted.\n");

    return 0;
}
